<div class="container">
    <div class="row">
        <div class="col-sm-12 col-md-3">
            <img class="img-fluid img-thumbnail rounded" src="{{ recs.image }}" alt="{{ recs.name }}" />
        </div>
        <div class="col-sm-12 col-md-9">
            <div class="mb-1"><i><strong>Title: </strong></i>{{ recs.name }}</div>
            <div class="mb-1"><i><strong>Language: </strong></i>{{ recs.lang }}</div>
            <div class="mb-1"><i><strong>Rating: </strong></i>{{ recs.rating }}</div>
            <div class="mb-1"><i><strong>Summary: </strong></i>{{{ recs.summary }}}</div>
        </div>
    </div>
    <div class="d-flex justify-content-between mt-3 mb-3">
        <div>
            <a class="btn btn-primary" href="/">Back to Main Page</a>
        </div>
        {{#if hasSite}}
        <div>
            <a class="btn btn-primary" href="{{ recs.official_site }}">Official Site</a>
        </div>
        {{/if}}
    </div>
</div>